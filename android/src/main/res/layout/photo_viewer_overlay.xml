<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
		<TextView
			android:id="@+id/tvTitlePager"
			style="@style/TitleText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
      android:paddingTop="5dp"
			android:textAlignment="center" />

		<Button
			android:id="@+id/btnClose"
			style="@style/SimpleButtonStyle"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:gravity="right"
			android:layout_marginTop="0dp"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:text="@string/close" />

		<Button
			android:id="@+id/btnShare"
			style="@style/SimpleButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:layout_alignParentEnd="true"
			android:layout_alignParentLeft="true"
			android:text="@string/share" />
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDescription"
            style="@style/DescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tvTitle" />

        <TextView
            android:id="@+id/tvCmtText"
            style="@style/CommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription" />

        <View
      			android:id="@+id/Line"
      			android:layout_marginTop="10dp"
      			android:layout_width="match_parent"
      			android:layout_height="1dp"
      			android:background="@color/accentText"
      			android:layout_below="@id/tvCmtText" />


        <Button
      			android:id="@+id/btnComment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
      			android:textColor="@color/accentText"
      			android:layout_marginTop="10dp"
      			android:padding="0dp"
      			android:textSize="20dp"
      			android:text="@string/comment"
            android:layout_below="@id/Line"
        />

        <Button
            android:id="@+id/btnMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:padding="0dp"
            android:textColor="@color/accentText"
            android:textSize="20dp"
            android:text="@string/more"
            android:layout_below="@id/Line"
        />

    </RelativeLayout>
</merge>
