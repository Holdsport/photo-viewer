<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        >
		<TextView
			android:id="@+id/tvTitlePager"
			style="@style/PagerText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
      android:layout_marginTop="5dp"
			android:textAlignment="left" />

		<Button
			android:id="@+id/btnClose"
			style="@style/SimpleButtonStyle"
      android:layout_width="20dp"
			android:layout_height="20dp"
			android:gravity="right"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:text="@string/close" />

		<Button
			android:id="@+id/btnShare"
			style="@style/SimpleButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:layout_alignParentEnd="true"
			android:layout_alignParentLeft="true"
			android:text="@string/share" />
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:paddingTop="12dp"
        >
        <View
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:paddingTop="12dp"
          android:paddingLeft="12dp"
          android:paddingRight="12dp"
          >
            <TextView
                android:id="@+id/tvTitle"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDescription"
                style="@style/DescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tvTitle" />

            <Button
                android:id="@+id/tvCmtText"
                style="@style/CommentText"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDescription" />

            <View
          			android:id="@+id/Line"
          			android:layout_marginTop="7dp"
          			android:layout_marginBottom="7dp"
          			android:layout_width="match_parent"
          			android:layout_height="1dp"
          			android:background="@color/accentText"
          			android:layout_below="@id/tvCmtText" />
        </View>

        <Button
      			android:id="@+id/btnComment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
      			android:textColor="@color/accentText"
      			android:padding="12dp"
      			android:textSize="20dp"
      			android:text="@string/comment"
        />

        <Button
            android:id="@+id/btnMore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:textColor="@color/accentText"
            android:textSize="20dp"
            android:text="@string/more"
        />

    </RelativeLayout>
</merge>
