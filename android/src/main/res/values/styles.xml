<resources>

    <!-- Base application theme. -->
     <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
     </style>

    <style name="SimpleButtonStyle" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">12sp</item>
        <item name="android:paddingRight">12sp</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textColor">@color/accentText</item>
    </style>
    <style name="PagerText" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/accentText</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">Lato</item>
    </style>
    <style name="SimpleButtonMore" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12sp</item>
        <item name="android:textColor">@color/accentText</item>
    </style>
    <style name="DescriptionText" parent="AppTheme">
        <item name="android:textColor">@color/grey</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">Lato</item>
    </style>
    <style name="CommentText" parent="AppTheme">
        <item name="android:textColor">@color/accentText</item>
        <item name="android:padding">0sp</item>
        <item name="android:layout_marginLeft">-5dip</item>
        <item name="android:layout_marginRight">-5dip</item>
        <item name="android:layout_marginTop">-5dip</item>
        <item name="android:layout_marginBottom">-5dip</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">Lato</item>
    </style>
    <style name="TitleText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accentText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">Lato</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
